<launch>
  <node name="image_siftnode" pkg="imagesift" type="imagesift" output="screen" >
    <remap from="image" to="prosilica/image_raw" />
    <remap from="camera_info" to="prosilica/camera_info" />
  </node>

  <node name="point_pose_extractor" pkg="jsk_perception"
        type="point_pose_extractor" clear_params="true">
    
    <param name="template_filename" value="$(find jsk_2020_04_pr2_curry)/data/ih-panel-stove/ih-panel-fig.jpg"/>
    <param name="object_width" value="0.260" />
    <param name="object_height" value="0.120" />

    <param name="reprojection_threshold" value="3.0" />  <!-- TODO cv::findHomography ransacReprojThreshold 許容される誤差の最大値 1から10が妥当10 3.0 -->
    <param name="distanceratio_threshold" value="0.6" /> <!-- TODO 0.6 0.49 -->
    <param name="relative_pose" value="0 0 0 0 0 0 1" />    <!-- TODO quaternion expression -->
    <param name="error_threshold" value="100.0" />
    <param name="window_name" value="microwave" />
    <!-- <param name="viewer_window" value="false" />  -->
  </node>
</launch>
