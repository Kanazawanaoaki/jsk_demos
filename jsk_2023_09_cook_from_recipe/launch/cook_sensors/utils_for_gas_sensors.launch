    <arg name="sensor_topic" value="gas_v2_502b" />
  </include>

  <!-- gas_v2_702b -->
  <include file="$(find jsk_2023_09_cook_from_recipe)/launch/cook_sensors/timestamped_relay_publish.launch">
    <arg name="sensor_topic" value="gas_v2_702b" />
  </include>

  <!-- tgs_2600_analog -->
  <include file="$(find jsk_2023_09_cook_from_recipe)/launch/cook_sensors/timestamped_relay_publish.launch">
    <arg name="sensor_topic" value="tgs_2600_analog" />
