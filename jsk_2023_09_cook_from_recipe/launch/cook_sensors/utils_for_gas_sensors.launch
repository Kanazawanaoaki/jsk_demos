<launch>
  <arg name="gui" default="True" />
  <arg name="save_img" default="True" />

  <group if="$(arg gui)">
    <!-- plot -->
    <include file="$(find jsk_2023_09_cook_from_recipe)/launch/cook_sensors/rqt_plot_test.launch">
    </include>
  </group>

  <!-- data saver -->
  <include file="$(find jsk_2023_09_cook_from_recipe)/launch/cook_sensors/sensors_data_save.launch">
    <arg name="config_name" value="timestamped_gas_sensors.yaml" />
  </include>
  <group if="$(arg save_img)">
    <include file="$(find jsk_2023_09_cook_from_recipe)/launch/cook_sensors/periodic_image_saver.launch">
    </include>
  </group>

  <!-- relay -->
  <!-- cal_gas -->
  <include file="$(find jsk_2023_09_cook_from_recipe)/launch/cook_sensors/timestamped_relay_publish.launch">
    <arg name="sensor_topic" value="cal_gas" />
  </include>

  <!-- gas_v2_102b -->
  <include file="$(find jsk_2023_09_cook_from_recipe)/launch/cook_sensors/timestamped_relay_publish.launch">
