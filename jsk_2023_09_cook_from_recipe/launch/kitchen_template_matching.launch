<launch>
  <arg name="gui" default="true" />

  <!-- <arg name="input_image" default="/k4a/rgb/image_rect_color"/> -->
  <!-- <arg name="input_cam_info" default="/k4a/rgb/camera_info"/> -->

  <arg name="input_image" default="/kinect_head/rgb/image_rect_color"/>
  <arg name="input_cam_info" default="/kinect_head/rgb/camera_info"/>

  <node name="nodelet_manager"
        pkg="nodelet" type="nodelet"
        args="manager" output="screen"/>

  <node name="imagesift"
        pkg="nodelet" type="nodelet"
        args="load imagesift/ImageSift nodelet_manager">
    <remap from="image" to="$(arg input_image)"/>
    <remap from="camera_info" to="$(arg input_cam_info)" />
  </node>

  <node name="stove_point_pose_extractor"
        pkg="nodelet" type="nodelet"
        args="load jsk_perception/PointPoseExtractor nodelet_manager"
        respawn="false" output="screen" required="true" >
    <rosparam subst_value="true">
      template_filename: $(find jsk_perception)/sample/image/pai_no_mi.jpg
      template_id: 0
      object_width: 0.145
      object_height: 0.128
      viewer_window: $(arg gui)
    </rosparam>
  </node>

